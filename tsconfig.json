{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "outDir": "dist",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": false,
        "checkJs": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules/"],
    "include": ["./src/**/*"],
    "ts-node": {
        "esm": true
    }
}
